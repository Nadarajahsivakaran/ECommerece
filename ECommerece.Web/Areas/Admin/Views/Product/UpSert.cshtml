@model Product

<h1>@(Model.Id == 0 ? "Create" : "Update") Product</h1>

<div class="row">
    <div class="col-6">
        <form method="post" enctype='multipart/form-data'>
            <input asp-for="Id" hidden />
            <input asp-for="CreatedAt" hidden />
            <input asp-for="ImageUrl" hidden />
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name...">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description...">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categoryList">
                    <option disabled selected>--please Select--</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UnitPrice"></label>
                <input asp-for="UnitPrice" class="form-control" placeholder="Enter Unit Price...">
                <span class="text-danger" asp-validation-for="UnitPrice"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImageUrl"></label>
                <input type="file" asp-for="ImageUrl" class="form-control" name="imageFile">
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>

            <button type="submit" class="btn btn-primary">@(Model.Id == 0 ? "Create" : "Update")</button>
        </form>

    </div>
    <div class="col-6">
        <img alt="Name" src="/Product/@Model.ImageUrl" style="width:500px; height:400px;"/>
    </div>
</div>


@section scripts{
    <Partial name="_ValidationScriptsPartial" />
}